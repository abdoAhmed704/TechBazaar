<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 0.75rem 1rem;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar .active {
                background-color: #495057;
            }

        .content-wrapper {
            flex-grow: 1;
            background-color: #f8f9fa;
            padding: 1rem;
        }

        .navbar {
            background-color: white;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h4 class="text-white mb-4">🛒 TechBazaar</h4>
        <a asp-controller="Admin" class="active"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
        <a asp-controller="Product" asp-action="Index"><i class="bi bi-box-seam me-2"></i> Products</a>
        <a asp-controller="Admin" asp-action="Orders"><i class="bi bi-cart-check me-2"></i> Orders</a>
        <a asp-controller="Admin" asp-action="SalesReport"><i class="bi bi-cart-check me-2"></i> Report</a>
        <a asp-controller="Category" asp-action="Index"><i class="bi bi-people me-2"></i> Categories</a>
        <a asp-controller="Brand" asp-action="Index"><i class="bi bi-people me-2"></i> Brands</a>
        <a asp-controller="Discount" asp-action="Index"><i class="bi bi-people me-2"></i> Discounts</a>
        <a asp-controller="Inventory" asp-action="Index"><i class="bi bi-people me-2"></i> Inventory</a>
      @*   <a href="/reports"><i class="bi bi-graph-up me-2"></i> Reports</a>
        <a href="/settings"><i class="bi bi-gear me-2"></i> Settings</a> *@
        <hr class="text-secondary" />
        <a asp-action="Index" asp-controller="Home"><i class="bi bi-box-arrow-right me-2"></i> Return</a>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <!-- Top Navbar -->
        <div class="navbar d-flex justify-content-between align-items-center">
            <h5>@ViewBag.Title</h5>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-2 fs-5"></i> Admin
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout">Sign out</a></li>
                </ul>
            </div>
        </div>

        <!-- Page Content -->
        <div class="container-fluid mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
