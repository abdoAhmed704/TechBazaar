@model List<ProductInventoryModelView>;
@{
    ViewData["Title"] = "Inventory";
    Layout = "_Dashboard";
}

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Manage</a>
                </td>
            </tr>
        </tbody>
    }
</table>